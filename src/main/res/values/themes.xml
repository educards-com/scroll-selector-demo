<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Android" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Widget.Android.SelectionDebugView" parent="">
        <item name="primaryCurveColor">@color/purple_500</item>
        <item name="secondaryCurveColor">#4D6200EE</item>
        <item name="unknownAreaColor">#19000000</item>
        <item name="distanceTextColor">@color/black</item>
        <item name="selectionTextColor">@color/white</item>
        <item name="selectionLineColor">@color/purple_500</item>
    </style>

</resources>